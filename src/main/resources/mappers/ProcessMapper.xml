<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace是命名空间，是mapper接口的全路径 -->
<mapper namespace="cn.reimbursement.dao.ProcessDao">

	<!--resultMap – 是最复杂也是最强大的元素，用来描述如何从数据库结果集中来加载对象 -->
	<resultMap id="processMap"
		type="cn.reimbursement.pojo.Process">
		<id property="processId" column="process_id" />
		<result property="processCompany" column="process_company" />
		<result property="processDepartment"
			column="process_department" />
		<result property="processContent" column="process_content" />
		<result property="processCount" column="process_count" />
	</resultMap>

	<!--sql – 可被其他语句引用的可重用语句块 -->
	<sql id="processColums">
		process_id,process_company,process_department,process_content,process_count
	</sql>
	<select id="selectProcessById" resultMap="processMap">
		SELECT
		<include refid="processColums" />
		FROM process WHERE process_id=#{processId}
	</select>
	
    <insert id="insertProcess" parameterType="java.util.Map">
        insert into process
        <foreach collection="processMap.keys" separator="," item="key" open="(" close=")">
            ${key}
        </foreach>
        values
        <foreach collection="processMap.keys" item="key" separator="," open="(" close=")">
            #{processMap[${key}]}
        </foreach>
    </insert>
    
	<select id="selectProcess" parameterType="java.util.Map" resultMap="processMap">  
	    SELECT <include refid="processColums"/>
	    FROM process
	    WHERE 1=1
	    <if test="processMap.processCompany != null"> 
	        AND process_company = #{processMap.processCompany}
	    </if>  
	    <if test="processMap.processDepartment != null">  
	        AND process_department = #{processMap.processDepartment}
	    </if>  
	    <if test="processMap.processContent != null">  
	        AND process_content = #{processMap.processContent}
	    </if>  
	    <if test="processMap.processCount != null">  
	        AND process_count = #{processMap.processCount}
	    </if>  
	</select>
</mapper>